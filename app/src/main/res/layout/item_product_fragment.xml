<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true">

    <LinearLayout
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:src="@drawable/tableicon"
                android:id="@+id/img_item_table"
                android:layout_marginEnd="8dp"
                android:layout_width="100dp"
                android:layout_height="90dp"/>

        <RelativeLayout
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_name_item_table"
                    android:textSize="25sp"
                    android:textColor="#4F4F4F"
                    android:fontFamily="@font/gotham_medium"/>

            <TextView
                    android:text="Producer"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_producer_item_table"
                    android:layout_below="@id/txt_name_item_table"
                    android:textSize="15sp"
                    android:textColor="#4F4F4F"
                    android:fontFamily="@font/gotham_book"/>

            <TextView
                    android:text="Rs. 15000"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_price_item_table"
                    android:layout_below="@id/txt_producer_item_table"
                    android:textSize="30sp"
                    android:textColor="@color/text_red"
                    android:fontFamily="@font/gotham_medium"/>

            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_rating_table"
                    android:numStars="5"
                    android:progressTint="@color/yellow"
                    android:stepSize="1"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_toEndOf="@id/txt_price_item_table"
                    android:layout_below="@id/txt_producer_item_table"
                    android:rating="2"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>