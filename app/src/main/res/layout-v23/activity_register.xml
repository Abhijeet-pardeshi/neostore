<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:paddingStart="@dimen/horizontal_padding_40px"
        android:paddingEnd="@dimen/horizontal_padding_40px">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">


        <LinearLayout
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/horizontal_margin_60px"
                android:layout_marginEnd="@dimen/horizontal_margin_60px"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_title"
                    android:text="@string/neostore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="55sp"
                    android:fontFamily="@font/gotham_bold"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

            <EditText
                    android:id="@+id/edt_reg_first_name"
                    android:background="@drawable/edt_custom_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginTop="55dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/gotham_medium"
                    android:hint="@string/first_name"
                    android:drawableStart="@drawable/username_icon"
                    android:textColor="@color/white"
                    android:drawablePadding="22dp"
                    android:textColorHint="@color/white"/>

            <EditText
                    android:id="@+id/edt_reg_last_name"
                    android:background="@drawable/edt_custom_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/gotham_medium"
                    android:hint="@string/last_name"
                    android:drawableStart="@drawable/username_icon"
                    android:textColor="@color/white"
                    android:drawablePadding="22dp"
                    android:textColorHint="@color/white"/>

            <EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/edt_reg_email"
                    android:background="@drawable/edt_custom_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/gotham_medium"
                    android:hint="@string/email"
                    android:drawableStart="@drawable/email_icon"
                    android:textColor="@color/white"
                    android:drawablePadding="22dp"
                    android:textColorHint="@color/white"/>

            <EditText
                    android:id="@+id/edt_reg_password"
                    android:background="@drawable/edt_custom_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/gotham_medium"
                    android:hint="@string/password"
                    android:drawableStart="@drawable/password_icon"
                    android:textColor="@color/white"
                    android:drawablePadding="22dp"
                    android:textColorHint="@color/white"/>

            <EditText
                    android:id="@+id/edt_reg_con_password"
                    android:background="@drawable/edt_custom_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/gotham_medium"
                    android:hint="@string/confirm_password"
                    android:drawableStart="@drawable/password_icon"
                    android:textColor="@color/white"
                    android:drawablePadding="22dp"
                    android:textColorHint="@color/white"/>

            <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_gender"
                        android:text="@string/gender"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                />

                <RadioGroup
                        android:id="@+id/rg_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <RadioButton
                            android:paddingStart="8dp"
                            android:paddingEnd="0dp"
                            android:button="@null"
                            android:background="@android:color/transparent"
                            android:id="@+id/rb_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/male"
                            android:textSize="19sp"
                            android:drawableStart="@drawable/radiobtn_selector"
                            android:drawablePadding="8dp"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"/>

                    <RadioButton
                            android:paddingStart="8dp"
                            android:paddingEnd="0dp"
                            android:button="@null"
                            android:background="@android:color/transparent"
                            android:id="@+id/rb_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/female"
                            android:drawableStart="@drawable/radiobtn_selector"
                            android:drawablePadding="8dp"
                            android:textSize="19sp"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"/>

                </RadioGroup>

            </LinearLayout>

            <EditText
                    android:inputType="phone"
                    android:id="@+id/edt_reg_phone"
                    android:background="@drawable/edt_custom_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/gotham_medium"
                    android:hint="@string/phone_number"
                    android:drawableStart="@drawable/cellphone"
                    android:textColor="@color/white"
                    android:drawablePadding="22dp"
                    android:textColorHint="@color/white"/>

            <CheckBox
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/cb_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/terms_and_conditions"
                    android:textSize="16sp"
                    android:button="@null"
                    android:drawableStart="@drawable/cb_selector"
                    android:drawablePadding="8dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white"
            />

            <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/register"
                    android:textColor="@color/red"
                    android:background="@drawable/btn_custom_white_bg"
                    android:foreground="?android:selectableItemBackground"
            />

        </LinearLayout>

    </ScrollView>


</LinearLayout>